<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.auser.demosendtoserver.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:textSize="25sp"
        android:id="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年齡"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性別"
        android:textSize="25sp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址"
        android:textSize="25sp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"

        app:layout_constraintLeft_toLeftOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="電話"
        android:textSize="25sp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"

        app:layout_constraintLeft_toLeftOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="興趣"
        android:textSize="25sp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"

        app:layout_constraintLeft_toLeftOf="@+id/textView5" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="215dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="25dp" />

    <RadioGroup
        android:layout_width="216dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/et_age"
        android:layout_marginLeft="-2dp"
        app:layout_constraintLeft_toLeftOf="@+id/et_age">

        <RadioButton
            android:id="@+id/rbtn_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.42"
            android:text="男"
            android:checked="true"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/rtn_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.48"
            android:text="女"
            android:textSize="25sp" />

    </RadioGroup>

    <EditText
        android:id="@+id/et_age"
        android:layout_width="215dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/et_name" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="221dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/radioGroup" />

    <EditText
        android:id="@+id/et_phoneNumber"
        android:layout_width="222dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="25sp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/et_address"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/et_address" />

    <EditText
        android:id="@+id/et_favor1"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="25sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/et_phoneNumber"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/et_phoneNumber" />

    <EditText
        android:id="@+id/et_favor2"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/et_favor1"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/et_phoneNumber" />

    <EditText
        android:id="@+id/et_favor3"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/et_favor1"
        app:layout_constraintTop_toBottomOf="@+id/et_favor1" />

    <EditText
        android:id="@+id/et_favor4"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/et_favor2"
        app:layout_constraintTop_toBottomOf="@+id/et_favor2" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="送出"
        android:textSize="25sp"
        android:layout_marginLeft="-8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView6"
        android:layout_marginTop="105dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:onClick="doSend"/>

</android.support.constraint.ConstraintLayout>
